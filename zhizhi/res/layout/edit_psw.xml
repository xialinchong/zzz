<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <TextView
        android:id="@+id/edit_logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="密码找回"
        android:textSize="20sp" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/edit_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/edit_psw_bg"
            android:gravity="center"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:paddingTop="10sp"
            android:text="请输入您的用户名或电子邮箱地址，您会收到一封包含创建新密码链接的电子邮箱。"
            android:textColor="@color/edit_psw_text"
            android:textSize="15sp" />

        <EditText
            android:layout_below="@+id/edit_info"
            android:id="@+id/edit_key"
            android:layout_alignLeft="@+id/edit_info"
            android:layout_alignRight="@+id/edit_info"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="请输入用户名或邮件地址"
            android:textColorHint="@color/red"
            
            android:background="@android:drawable/edit_text" />

        
        <ImageButton
            android:layout_below="@+id/edit_key"
            android:id="@+id/get_new_psw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_psw_selector" />
        
        
    </RelativeLayout>
    
    


</LinearLayout>
